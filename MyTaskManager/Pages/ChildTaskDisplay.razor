@using Microsoft.AspNetCore.Components
@page "/tasks2"
@layout Layout.layout2
<head>
    <link rel="stylesheet" href="Pages/abc.css" />
</head>
<div style="background-color: aquamarine; border: 12px; padding: 12px;">
    <p>@TaskName</p>
    <button @onclick="MarkAsComplete">Mark as Complete</button>
</div>
<div>
    <p>Hello!</p>
</div>

@code {
    [Parameter]
    public string TaskName { get; set; } = string.Empty; // Default value to avoid null issues

    [Parameter]
    public EventCallback<string> OnTaskCompleted { get; set; }

    private void MarkAsComplete()
    {
        if (!string.IsNullOrWhiteSpace(TaskName))
        {
            OnTaskCompleted.InvokeAsync(TaskName);
        }
    }
}
